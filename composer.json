{
    "name": "vda/validation",
    "type": "component",
    "description": "Data validation library",
    "keywords": ["validation"],
    "require": {
        "php": ">=5.3.23",
        "vda/util": "0.11.*|0.12.*",
        "robloach/component-installer": "*"
    },
    "autoload": {
        "psr-4": { "Vda\\Validation\\": "src/" }
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-trunk": "1-dev"
        },
        "component": {
            "scripts": [
                "js/array-validator.js",
                "js/error-renderer.js",
                "js/form-validator.js",
                "js/validators.js"
            ],
            "shim": {
                "deps": ["jquery"]
            }
        }
    }
}
